  <title>Happy Birthday Melissa</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      overflow: hidden;
      background: #ffd6ec;
      font-family: "Segoe UI", sans-serif;
    }

    .heart {
      width: 200px;
      height: 180px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-45deg);
      background: red;
      animation: pulse 2s infinite;
    }

    .heart::before,
    .heart::after {
      content: '';
      width: 200px;
      height: 180px;
      position: absolute;
      background: red;
      border-radius: 50%;
    }

    .heart::before {
      top: -100px;
      left: 0;
    }

    .heart::after {
      left: 100px;
      top: 0;
    }

    @keyframes pulse {
      0% { transform: scale(1) rotate(-45deg); }
      50% { transform: scale(1.05) rotate(-45deg); }
      100% { transform: scale(1) rotate(-45deg); }
    }

    .message {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      color: white;
      font-size: 24px;
      width: 200px;
      z-index: 2;
    }

    .bg-heart {
      position: absolute;
      width: 10px;
      height: 10px;
      background-color: pink;
      border-radius: 50%;
      animation: float 8s linear infinite;
    }

    @keyframes float {
      0% {
        transform: translateY(100vh) scale(1);
        opacity: 1;
      }
      100% {
        transform: translateY(-10vh) scale(1.5);
        opacity: 0;
      }
    }

    .corner {
      position: absolute;
      width: 100px;
    }

    .swimmer {
      bottom: 20px;
      left: 20px;
    }

    .lily {
      bottom: 20px;
      right: 20px;
    }
